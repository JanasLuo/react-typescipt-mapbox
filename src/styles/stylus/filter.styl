:global .page-list
  width 100%
  height calc(100% - 35px)

  .content
    height calc(100% - 80px)
    overflow-y auto

    // padding 32px 32px 24px 32px
    // background rgba(6, 75, 88, 0.64)
    .card
      width 100%
      height 140px
      border-bottom 1px solid rgba(0, 240, 239, 0.32)
      display flex
      padding 32px

      &:nth-child(odd)
        background rgba(0, 240, 239, 0.08)

      .row-img
        width 115px
        height 90px
        padding 5px
        margin-right 24px
        border 1px solid #00F0EF

      .row-content
        // display flex
        // justify-content space-between
        flex 1
        padding-right 30px

        .text-box
          // margin-right 64px
          overflow hidden
          float left

          .label
            color rgba(255, 255, 255, 0.5)
            font-weight bold
            font-size 20px
            line-height 37px

          .value
            font-size 20px
            line-height 48px
            overflow hidden
            width 100%
            text-overflow ellipsis
            white-space nowrap

      .row-btn
        display flex
        justify-content space-between
        width 215px
        padding-top 20px

        .list-btn
          width 99px
          height 44px
          text-align center
          background rgba(0, 240, 239, 0.16)
          line-height 44px
          font-weight 600
          font-size 20px
          cursor pointer

          &:hover
            background rgba(0, 240, 239, 0.48)