.login-menu
  width 100%
  height 100%
  overflow hidden
  position relative

  :global
    .login-btn-submit
      width 100%
      background #218ef2
      height 56px
      margin-top 53px
      border 0
      font-weight bold
      font-size 20px
      line-height 56px
      color #fff
      padding 0

    .login-box
      width 700px
      height 525px
      position absolute
      top 20%
      left 50%
      z-index 4
      transform translateX(-50%)
      background-size 100% 100%
      background-repeat no-repeat
      background-image url('../../assets/login/login-box.png')
      color #e3f7ff
      padding 80px 100px

      .con
        font-weight bold
        font-size 32px
        margin-bottom 24px
        line-height 40px

      .el-input__inner
        height 56px
        line-height 56px
        // input {
        border 2px solid rgba(107, 200, 250, 0.32)
        background rgba(107, 200, 250, 0.12)
        color #ffffff
        font-size 16px
        // }

    .top
      width 100%
      position absolute
      top 0
      left 0
      z-index 4

    .video
      width 100%
      height 100%
      // z-index: 1;

    .back
      position absolute
      top 0
      left 0
      // z-index: 2;
      width 100%
      height 100%
      background-size 100% 100%
      background-repeat no-repeat
      background-image url('../../assets/login/login_bg.png')
      // mix-blend-mode: soft-light;

    .word
      position absolute
      bottom 47px
      left 40px
      font-weight bold
      font-size 22px
      line-height 40px
      padding 12px 40px
      color #7df7ff
      width 1370px
      background rgba(22, 28, 40, 0.32)